# Common server configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# --- Development (Docker + Neon Local) ---
# These are read when running docker-compose.dev.yml
NEON_API_KEY=your_neon_api_key_here
NEON_PROJECT_ID=your_neon_project_id_here
PARENT_BRANCH_ID=your_parent_branch_id_here

# Flag app to configure Neon Local proxy
NEON_LOCAL=true
NEON_LOCAL_HOST=neon-local
NEON_LOCAL_PORT=5432

# Neon Local Postgres endpoint (inside Docker network)
# "neon" / "npg" are the fixed credentials for Neon Local.
DATABASE_URL=postgres://neon:npg@neon-local:5432/acquisitions?sslmode=require

# --- Production (Neon Cloud) ---
# Used when running docker-compose.prod.yml or in your hosting platform
# Replace with the DATABASE_URL from the Neon console for your production branch.
# DATABASE_URL=postgres://user:password@your-project-id-region.aws.neon.tech/neondb?sslmode=require

# Other secrets (never commit real values)
ARCJET_KEY=your_arcjet_key_here
